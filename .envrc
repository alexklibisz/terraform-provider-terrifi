# Point Terraform at the project-local .terraformrc,
# which is generated by `task build` and git-ignored.
TERRIFI_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export TF_CLI_CONFIG_FILE="$TERRIFI_ROOT/.terraformrc"

# Example values for .envrc.local.
export UNIFI_USERNAME=admin
export UNIFI_PASSWORD='SETPASSWORD'
export UNIFI_API="https://<SETHOST>:<SETPORT>"
export UNIFI_INSECURE=true
export UNIFI_SITE=default

# Load credentials from .envrc.local (git-ignored).
source_env_if_exists .envrc.local
